@{
    Layout = "_Layout_Cliente";
    ViewData["Title"] = "Mi Perfil";
    var usuario = ViewBag.Usuario;
}

<div class="dashboard-header">
    <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
        <div>
            <h1 class="dashboard-title">Mi Perfil</h1>
            <p class="dashboard-subtitle">Consulta y administra tu información personal</p>
        </div>
        <div class="task-actions2">
            <a href="@Url.Action("EditarPerfil")" class="btn-view">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Editar Perfil
            </a>
        </div>
    </div>
</div>

<!-- Sección de Información Personal -->
<div class="tasks-section pending-section">
    <div class="section-header">
        <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Información Personal
        </h2>
    </div>
    
    <div style="padding: 2rem 2.5rem;">
        <div class="row g-4">
            <!-- Información Básica -->
            <div class="col-lg-6">
                <div class="task-card" style="height: 100%; border-left: 4px solid var(--primary-color);">
                    <div class="task-content">
                        <div class="task-header" style="margin-bottom: 1.5rem;">
                            <h3 style="color: var(--primary-color); font-size: 1.25rem; font-weight: 600; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 20px; height: 20px;">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Datos Personales
                            </h3>
                        </div>
                        
                        <div class="profile-field">
                            <label class="profile-label">Nombre Completo</label>
                            <p class="profile-value">@usuario.nombre</p>
                        </div>
                        
                        <div class="profile-field">
                            <label class="profile-label">Correo Electrónico</label>
                            <p class="profile-value">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 16px; height: 16px; margin-right: 0.5rem; color: var(--primary-color);">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                @usuario.correo
                            </p>
                        </div>
                        
                        <div class="profile-field">
                            <label class="profile-label">Teléfono</label>
                            <p class="profile-value">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 16px; height: 16px; margin-right: 0.5rem; color: var(--primary-color);">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                @usuario.telefono
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Sección de Acciones Adicionales -->
<div class="tasks-section stats-section">
    <div class="section-header">
        <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Configuración de Cuenta
        </h2>
    </div>
    
    <div style="padding: 2rem 2.5rem;">
        <div class="task-card" style="border-left: 4px solid var(--warning-color); max-width: 500px; margin: 0 auto;">
            <div class="task-content">
                <div class="task-header"  margin-bottom: 1.5rem;">
                    <div style="width: 64px; height: 64px; background: linear-gradient(135deg, var(--warning-color), #f59e0b); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="white" style="width: 28px; height: 28px;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                    </div>
                    <h3 style="color: var(--text-primary); font-size: 1.25rem; font-weight: 600; margin: 0;">
                        Seguridad de la Cuenta
                    </h3>
                    <p style="color: var(--text-secondary); margin: 0.5rem 0 0; font-size: 0.875rem;">
                        Mantén tu cuenta segura actualizando tu contraseña regularmente
                    </p>
                </div>
                
                <div class="task-actions" style="justify-content: center;">
                    <a href="@Url.Action("CambiarContrasenia")" class="btn-view" style="background: var(--warning-color);">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                        Cambiar Contraseña
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


