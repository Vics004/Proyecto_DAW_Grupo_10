@{
    Layout = "_Layout_Cliente";
    ViewData["Title"] = "Mi Perfil";
    var usuario = ViewBag.Usuario;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="color: #001f3f; font-weight: bold;">Mi Perfil</h1>
        <a href="@Url.Action("EditarPerfil")" class="btn" style="background-color: #00509e; color: white;">
            <i class="fas fa-edit"></i> Editar Perfil
        </a>
    </div>

    <div class="card">
        <div class="card-header" style="background-color: #003366; color: white;">
            <h5 class="mb-0">Información Personal</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 style="color: #004080; font-weight: bold;">Nombre</h6>
                        <p>@usuario.nombre</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #004080; font-weight: bold;">Correo Electrónico</h6>
                        <p>@usuario.correo</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #004080; font-weight: bold;">Teléfono</h6>
                        <p>@usuario.telefono</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 style="color: #004080; font-weight: bold;">Empresa</h6>
                        <p>@usuario.empresa</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #004080; font-weight: bold;">Contacto Principal</h6>
                        <p>@usuario.contactoPrincipal</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #004080; font-weight: bold;">Detalles de Contacto</h6>
                        <p>@usuario.detalleContacto</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("CambiarContrasenia")" class="btn btn-outline-primary">
            <i class="fas fa-key"></i> Cambiar Contraseña
        </a>
    </div>
</div>
