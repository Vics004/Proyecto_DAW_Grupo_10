@{
    Layout = "_Layout_Cliente";
    ViewData["Title"] = "Mis Tickets";
}

<div class="container mt-4">
    <h1 class="mb-4" style="color: #001f3f; font-weight: bold;">Mis tickets</h1>

    <!-- Filtros -->
    <div class="card mb-3">
        <div class="card-header" style="background-color: #003366; color: white;">
            <h6 class="mb-0">
                <i class="fas fa-filter"></i> Filtros
            </h6>
        </div>
        <div class="card-body">
            <form method="get" asp-action="MisTickets" id="filtrosForm">
                <div class="row">
                    <div class="col-md-4">
                        <label for="estadoFiltro" class="form-label">Estado:</label>
                        <select name="estadoFiltro" id="estadoFiltro" class="form-select" asp-items="@(new SelectList(ViewBag.Estados as IEnumerable<dynamic>, "estadoId", "nombre", ViewBag.EstadoSeleccionado))">
                            <option value="">Todos los estados</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="prioridadFiltro" class="form-label">Prioridad:</label>
                        <select name="prioridadFiltro" id="prioridadFiltro" class="form-select" asp-items="@(new SelectList(ViewBag.Prioridades as IEnumerable<dynamic>, "prioridadId", "nombre", ViewBag.PrioridadSeleccionada))">
                            <option value="">Todas las prioridades</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Filtrar
                        </button>
                        <a asp-action="MisTickets" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Información de resultados -->
    <div class="mb-3">
        <small class="text-muted">
            @if (ViewBag.Tickets != null)
            {
                <span>Mostrando @ViewBag.Tickets.Count ticket(s)</span>
                @if (ViewBag.EstadoSeleccionado != null || ViewBag.PrioridadSeleccionada != null)
                {
                    <span> con filtros aplicados</span>
                }
            }
        </small>
    </div>

    <!-- Tabla de tickets -->
    <div class="card">
        <div class="card-header" style="background-color: #003366; color: white;">
            <h5 class="mb-0">Todos mis tickets</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Problema</th>
                            <th>Prioridad</th>
                            <th>Fecha Apertura</th>
                            <th>Estado</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Tickets != null && ViewBag.Tickets.Count > 0)
                        {
                            foreach (var ticket in ViewBag.Tickets)
                            {
                                <tr>
                                    <td>@ticket.ticketId</td>
                                    <td>@ticket.Problema</td>
                                    <td>
                                        <span class="badge @(ticket.Prioridad == "Urgente" ? "bg-danger" :
                                                          ticket.Prioridad == "Alta" ? "bg-warning text-dark" :
                                                          ticket.Prioridad == "Media" ? "bg-info" : "bg-secondary")">
                                            @ticket.Prioridad
                                        </span>
                                    </td>
                                    <td>@ticket.fechaApertura.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge @(ticket.Estado == "Finalizado" ? "bg-success" :
                                                          ticket.Estado == "En proceso" ? "bg-primary" :
                                                          ticket.Estado == "Cancelado" ? "bg-danger" : "bg-secondary")">
                                            @ticket.Estado
                                        </span>
                                    </td>
                                    <td>@(ticket.descripcion.Length > 50 ? ticket.descripcion.Substring(0, 50) + "..." : ticket.descripcion)</td>
                                    <td>
                                        <a asp-action="DetalleTicket" asp-route-id="@ticket.ticketId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">
                                    @if (ViewBag.EstadoSeleccionado != null || ViewBag.PrioridadSeleccionada != null)
                                    {
                                        <span>No se encontraron tickets con los filtros aplicados</span>
                                    }
                                    else
                                    {
                                        <span>No se encontraron tickets</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

