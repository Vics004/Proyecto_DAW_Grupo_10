@model Proyecto_DAW_Grupo_10.Models.ticket

@{
    ViewData["Title"] = "Editar Ticket";
    var tecnicos = ViewBag.Tecnicos as List<Proyecto_DAW_Grupo_10.ViewModels.TecnicoViewModel>;
    var categorias = ViewBag.Categorias as List<Proyecto_DAW_Grupo_10.Models.categoria>;
    var estados = ViewBag.Estados as List<Proyecto_DAW_Grupo_10.Models.estado>;
    var prioridades = ViewBag.Prioridades as List<Proyecto_DAW_Grupo_10.Models.prioridad>;
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<div class="container-fluid">
    <div class="row">
        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 main-content">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="dashboard-title">Editar Ticket #@Model.ticketId</h1>
            </div>

            <!-- Información del Ticket -->
            <div class="tasks-section pending-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información del Ticket
                    </h2>
                    <div class="task-counter">
                        <span class="priority-badge priority-@Model.prioridad?.nombre.ToLower()">
                            @Model.prioridad?.nombre
                        </span>
                        <span class="status-badge status-@Model.estado?.nombre.ToLower().Replace(" ", "-")">@Model.estado?.nombre</span>
                    </div>
                </div>

                <form asp-action="ActualizarTicket" method="post" class="task-content">
                    <input type="hidden" name="ticketId" value="@Model.ticketId" />

                    <div class="ticket-info-grid">
                        <div class="info-group">
                            <div class="info-item">
                                <label class="info-label">Ticket ID</label>
                                <p class="info-value">@Model.ticketId</p>
                            </div>
                            <div class="info-item">
                                <label class="info-label">Cliente</label>
                                <p class="info-value">@Model.usuarioCreador?.nombre</p>
                            </div>

                            <div class="info-item">
                                <label class="info-label">Fecha de Inicio</label>
                                <p class="info-value">@Model.fechaApertura.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="info-item">
                                <label class="info-label">Descripción del Ticket</label>
                                <p class="info-value">@Model.descripcion</p>
                            </div>
                        </div>

                        <div class="info-group">
                            <div class="info-item">
                                <label class="info-label">Categoría</label>
                                <div class="select-wrapper">
                                    <select id="categoriaSelect" name="categoriaId" class="form-control profile-input" required>
                                        <option value="">Elegir una opción</option>
                                        @foreach (var cat in categorias)
                                        {
                                            <option value="@cat.categoriaId" selected="@(Model.problema?.categoria?.categoriaId == cat.categoriaId ? "selected" : null)">
                                                @cat.nombre
                                            </option>
                                        }
                                    </select>
                                    <i class="fas fa-chevron-down select-arrow"></i>
                                </div>
                            </div>
                            <div class="info-item">
                                <label class="info-label">Aplicación o Servicio</label>
                                <div class="select-wrapper">
                                    <select id="problemaSelect" name="problemaId" class="form-control profile-input" required>
                                        <option value="">Primero seleccione una categoría</option>
                                    </select>
                                    <i class="fas fa-chevron-down select-arrow"></i>
                                </div>
                            </div>
                        </div>

                        <div class="info-group">
                            <div class="info-item">
                                <label class="info-label">Prioridad</label>
                                <div class="select-wrapper">
                                    <select name="prioridadId" class="form-control profile-input" required>
                                        @foreach (var prioridad in prioridades)
                                        {
                                            <option value="@prioridad.prioridadId" selected="@(prioridad.prioridadId == Model.prioridadId ? "selected" : null)">
                                                @prioridad.nombre
                                            </option>
                                        }
                                    </select>
                                    <i class="fas fa-chevron-down select-arrow"></i>
                                </div>
                            </div>
                            <div class="info-item">
                                <label class="info-label">Estado</label>
                                <div class="select-wrapper">
                                    <select name="estadoId" class="form-control profile-input" required>
                                        @foreach (var estado in estados.Where(e => e.nombre != "Creado" && e.nombre != "Asignado" || e.estadoId == Model.estadoId))
                                        {
                                            <option value="@estado.estadoId" selected="@(estado.estadoId == Model.estadoId ? "selected" : null)">
                                                @estado.nombre
                                            </option>
                                        }
                                    </select>

                                    <i class="fas fa-chevron-down select-arrow"></i>
                                </div>
                            </div>
                            <div class="form-actions" style="margin-top: 2rem;">
                                <a href="/Administrador/GestionTickets" class="btn-secondary">Cancelar</a>
                                <button type="submit" class="btn-view">Guardar Cambios</button>
                            </div>
                        </div>
                    </div>

                    <!-- Archivos Adjuntos -->
                    <div class="tasks-section stats-section" style="margin-top: 2rem;">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="fas fa-paperclip"></i>
                                Archivos Adjuntos del Ticket
                            </h2>
                        </div>

                        <div class="tasks-grid">
                            @if (Model.archivosAdjuntos != null && Model.archivosAdjuntos.Any())
                            {
                                @foreach (var archivo in Model.archivosAdjuntos)
                                {
                                    <div class="task-card">
                                        <div class="task-content">
                                            <div class="file-item">
                                                <div class="file-icon">
                                                    <i class="fas fa-file-alt"></i>
                                                </div>
                                                <div class="file-info">
                                                    <h3 class="file-name">@archivo.nombreArchivo</h3>
                                                    <p class="file-date">@archivo.fechaCarga.ToString("dd/MM/yyyy HH:mm")</p>
                                                </div>
                                                <div class="file-actions">
                                                    <a asp-controller="Cliente" asp-action="DescargarArchivo" asp-route-id="@archivo.archivoId" class="btn-view">
                                                        Descargar
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="task-card" style="grid-column: 1 / -1;">
                                    <div class="task-content">
                                        <div class="empty-state">
                                            <i class="fas fa-file-alt fa-2x"></i>
                                            <p>No hay archivos adjuntos</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div>

            <!-- Tareas Existentes -->
            <div class="tasks-section completed-section" style="margin-top: 2rem;">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-tasks"></i>
                        Tareas Existentes
                    </h2>
                </div>

                <div class="tasks-grid">
                    <div class="task-card" style="grid-column: 1 / -1; max-width: none;">
                        <div class="task-content">
                            <table class="modern-table">
                                <thead>
                                    <tr>
                                        <th>Tarea</th>
                                        <th>Descripción</th>
                                        <th>Fecha</th>
                                        <th>Técnico Asignado</th>
                                        <th>Estado Actual</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tarea in Model.tarea)
                                    {
                                        <tr>
                                            <td>@tarea.tareaId</td>
                                            <td>@tarea.descripcion</td>
                                            <td>@tarea.fecha.ToString("dd/MM/yyyy")</td>
                                            <td>@tarea.usuarioAsignado?.nombre</td>
                                            <td>
                                                <span class="status-badge status-@tarea.estado?.nombre.ToLower().Replace(" ", "-")">
                                                    @tarea.estado?.nombre
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    @if (tarea.estadoId != 2 && tarea.estadoId != 6)
                                                    {
                                                        <a asp-action="EditarTarea" asp-route-tareaId="@tarea.tareaId" class="btn-view">Editar</a>
                                                        <button type="button" class="btn-cancel" onclick="CancelarTarea(@tarea.tareaId)">Cancelar</button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn-cancel" disabled>Cancelar</button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Agregar Nueva Tarea -->
            <div class="tasks-section stats-section" style="margin-top: 2rem;">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-plus-circle"></i>
                        Agregar nueva tarea
                    </h2>
                </div>

                <div class="tasks-grid">
                    <div class="task-card" style="grid-column: 1 / -1; max-width: none;">
                        <div class="task-content">
                            <div class="info-item" style="margin-bottom: 1.5rem;">
                                <label class="info-label">Filtrar por categoría</label>
                                <select id="categoriaFiltro" class="form-control profile-input" onchange="filtrarTabla()">
                                    <option value="">Todas</option>
                                    @foreach (var categoria in categorias)
                                    {
                                        <option value="@categoria.categoriaId">@categoria.nombre</option>
                                    }
                                </select>
                            </div>

                            <table class="modern-table" id="tablaTecnicos">
                                <thead>
                                    <tr>
                                        <th>#Empleado</th>
                                        <th>Nombre</th>
                                        <th>Categoría</th>
                                        <th>Total tickets activos</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tecnico in tecnicos)
                                    {
                                        <tr data-categoria="@tecnico.categoriaId">
                                            <td>@tecnico.usuarioId</td>
                                            <td>@tecnico.nombre</td>
                                            <td>@tecnico.categoriaNombre</td>
                                            <td>@tecnico.TicketsActivos</td>
                                            <td>
                                                <button type="button" class="btn-view" onclick="seleccionarTecnico(@tecnico.usuarioId, '@tecnico.nombre')">Seleccionar</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <form asp-action="CrearTarea" method="post" style="margin-top: 2rem;">
                                <input type="hidden" name="ticketId" value="@Model.ticketId" />
                                <input type="hidden" id="tecnicoId" name="tecnicoId" />
                                <div class="info-item">
                                    <label class="info-label">Descripción de la Tarea</label>
                                    <textarea id="descripcion" name="descripcion" class="form-control profile-input" rows="3"></textarea>
                                </div>
                                <div class="form-actions" style="margin-top: 1.5rem;">
                                    <a href="/Administrador/GestionTickets" class="btn-secondary">Volver</a>
                                    <button type="submit" class="btn-view">Agregar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        const problemaId = "@Model.problemaId";
        const tecnicoId = "@Model.tarea.FirstOrDefault()?.usuarioAsignadoId";

        document.getElementById('categoriaSelect').addEventListener('change', function () {
            const categoriaId = this.value;
            const problemaSelect = document.getElementById('problemaSelect');

            if (categoriaId) {
                fetch(`/Administrador/ObtenerProblemasPorCategoria?categoriaId=${categoriaId}`)
                    .then(res => res.json())
                    .then(data => {
                        problemaSelect.innerHTML = '<option value="">Elegir una opción</option>';
                        let found = false;
                        data.forEach(p => {
                            const opt = document.createElement('option');
                            opt.value = p.problemaId;
                            opt.textContent = p.nombre;
                            if (p.problemaId == problemaId) {
                                        opt.selected = true;
                                        found = true;
                                    }
                            problemaSelect.appendChild(opt);
                        });
                        if (!found) {
                                problemaSelect.value = "";
                            }
                    });
            } else {
                problemaSelect.innerHTML = '<option value="">Primero seleccione una categoría</option>';
            }
        });

        // Disparar el evento al cargar
        document.getElementById('categoriaSelect').dispatchEvent(new Event('change'));

        function CancelarTarea(tareaId) {
            if (confirm("¿Estás seguro de que deseas cancelar esta tarea?")) {
                fetch('/Administrador/CancelarTarea', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `tareaId=${tareaId}`
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("No se pudo cancelar la tarea.");
                    }
                })
                .catch(error => {
                    console.error("Error al cancelar la tarea:", error);
                    alert("Ocurrió un error al cancelar la tarea.");
                });
            }
        }

        function filtrarTabla() {
            var filtro = document.getElementById("categoriaFiltro").value;
            var filas = document.querySelectorAll("#tablaTecnicos tbody tr");
            filas.forEach(fila => {
                var categoria = fila.getAttribute("data-categoria");
                fila.style.display = (filtro === "" || filtro === categoria) ? "" : "none";
            });
        }

        function seleccionarTecnico(id, nombre) {
            document.getElementById("tecnicoId").value = id;
            alert("Técnico seleccionado: " + nombre);
        }
    </script>
}

}

