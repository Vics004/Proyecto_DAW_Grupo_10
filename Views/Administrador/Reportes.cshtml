@{
    ViewData["Title"] = "Reportes";
}

<link rel="stylesheet" href="~/css/admincss/reportes.css" />
<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2>@ViewData["Title"]</h2>
    </div>
    

    <!-- Sección de Técnicos -->
    <h4>Estadísticas de Técnicos</h4>
    <div class="mb-3">
        <a asp-action="GenerarPDFReporteTecnicos" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Descargar Reporte PDF
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Tickets Asignados</th>
                <th>Tickets Finalizados</th>
                <th>% Finalizados</th>
                <th>Estado</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var tecnico in Model.Tecnicos)
            {
                <tr>
                    <td>@tecnico.usuarioId</td>
                    <td>@tecnico.nombre</td>
                    <td>@tecnico.Categoria</td>
                    <td>@tecnico.TicketsAsignados</td>
                    <td>@tecnico.TicketsFinalizados</td>
                    <td>@tecnico.PorcentajeFinalizado%</td>
                    <td>@tecnico.Estado</td>
                    
                </tr>
            }
        </tbody>
    </table>

    <!-- Sección de Clientes -->
    <h4 class="mt-5">Estadísticas de Clientes</h4>
    <div class="mb-3">
        <a asp-action="GenerarPDFReporteClientes" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Descargar Reporte PDF
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tickets Realizados</th>
                <th>Tickets Completados</th>
                <th>Tickets Cancelados</th>
                <th>Estado</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Clientes)
            {
                <tr>
                    <td>@cliente.ID</td>
                    <td>@cliente.Nombre_Usuario</td>
                    <td>@cliente.Tickets_Realizados</td>
                    <td>@cliente.Tickets_Completados</td>
                    <td>@cliente.Tickets_Cancelados</td>
                    <td>@cliente.Estado_Cliente</td>
                    
                </tr>
            }
        </tbody>
    </table>


    <!-- Nueva sección de Categorías -->
    <h4 class="mt-5">Estadísticas de Categorías</h4>
    <div class="mb-3">
        <a asp-action="GenerarPDFReporteCategorias" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Descargar Reporte PDF
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Categoría</th>
                <th>Total Tickets</th>
                <th>Tickets Completados</th>
                <th>Tickets Cancelados</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model.Categorias)
            {
                <tr>
                    <td>@categoria.Categoria</td>
                    <td>@categoria.Total_Tickets</td>
                    <td>@categoria.Tickets_Completados</td>
                    <td>@categoria.Tickets_Cancelados</td>
                </tr>
            }
        </tbody>
    </table>
</div>