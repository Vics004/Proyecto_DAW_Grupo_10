@{
    Layout = "_Layout_Tecnico";
}
<div class="container-fluid">
    <div class="row">

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 main-content">
            <!-- Header -->
            <div class="dashboard-header mb-4">
                <h2 class="dashboard-title">Historial de Tareas</h2>
                <p class="dashboard-subtitle">Revisa el historial completo de tus tareas completadas</p>
            </div>

            <!-- Tasks Section -->
            <div class="tasks-section completed-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <span data-feather="archive"></span>
                        Tareas Completadas
                    </h3>
                    <div class="task-counter">
                        <span class="counter-badge completed-counter">
                            @{
                                var taskCount = ((IEnumerable<dynamic>)ViewData["MisTareas"]).Count();
                            }@taskCount
                        </span>
                    </div>
                </div>


                <!-- Sección de Filtros -->
                <div class="tasks-section stats-section">
                    <div class="section-header">
                        <h2 class="section-title">
                            <span data-feather="filter"></span>
                            Filtros de Búsqueda
                        </h2>
                    </div>
                    <div style="padding: 2rem 2.5rem;">
                        <form method="get" asp-action="HistorialTareas" id="filtrosForm">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label for="fechaInicio" class="form-label">Fecha Inicio:</label>
                                    <input type="date" name="fechaInicio" id="fechaInicio" class="form-control"
                                           value="@(ViewBag.FechaInicio?.ToString("yyyy-MM-dd"))" />
                                </div>
                                <div class="col-md-3">
                                    <label for="fechaFin" class="form-label">Fecha Fin:</label>
                                    <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                                           value="@(ViewBag.FechaFin?.ToString("yyyy-MM-dd"))" />
                                </div>
                                <div class="col-md-3">
                                    <label for="estadoFiltro" class="form-label">Estado:</label>
                                    <select name="estadoFiltro" id="estadoFiltro" class="form-select">
                                        <option value="">Todos los estados</option>
                                        @foreach (var item in ViewBag.Estados)
                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="categoriaFiltro" class="form-label">Categoría:</label>
                                    <select name="categoriaFiltro" id="categoriaFiltro" class="form-select">
                                        <option value="">Todas las categorías</option>
                                        @foreach (var item in ViewBag.Categorias)
                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-12 d-flex align-items-end gap-2">
                                    <button type="submit" class="btn-view" style="flex: 1;">
                                        <span data-feather="search"></span>
                                        Filtrar
                                    </button>
                                    <a asp-action="HistorialTareas" class="btn-view" style="background: var(--secondary-color); flex: 1;">
                                        <span data-feather="x"></span>
                                        Limpiar
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <span style="color: var(--text-secondary); font-weight: 500;">
                        Mostrando <strong style="color: var(--primary-color);">
                            @(((IEnumerable<dynamic>)ViewData["MisTareas"]).Count())
                        </strong> tarea(s)
                    </span>

                    <div class="task-actions" style="display: flex; gap: 0.75rem;">
                        <a href="@Url.Action("GenerarPDFHistorialTareas", "Tecnico", new {
                                fechaInicio = ViewBag.FechaInicio?.ToString("yyyy-MM-dd"),
                                fechaFin = ViewBag.FechaFin?.ToString("yyyy-MM-dd"),
                                estadoFiltro = ViewBag.EstadoSeleccionado,
                                categoriaFiltro = ViewBag.CategoriaSeleccionada
                            })" class="btn-view" style="background: var(--danger-color);">
                            <span data-feather="download"></span>
                            Exportar a PDF
                        </a>
                    </div>

                </div>



                <!-- Table Header -->
                <div class="table-header">
                    <div class="header-cell header-ticket">
                        <span data-feather="hash"></span>
                        Ticket
                    </div>
                    <div class="header-cell header-problem">
                        <span data-feather="alert-circle"></span>
                        Problema General
                    </div>
                    <div class="header-cell header-date">
                        <span data-feather="calendar"></span>
                        Fecha de la Tarea
                    </div>
                    <div class="header-cell header-status">
                        <span data-feather="activity"></span>
                        Estado
                    </div>
                    <div class="header-cell header-category">
                        <span data-feather="folder"></span>
                        Categoría
                    </div>
                    <div class="header-cell header-actions">
                        <span data-feather="settings"></span>
                        Acciones
                    </div>
                </div>

                <!-- Tasks List -->
                <div class="tasks-list">
                    @foreach (var tarea in (IEnumerable<dynamic>)ViewData["MisTareas"])
                    {
                        <div class="task-row">
                            <!-- ID -->
                            <div class="task-cell task-ticket">
                                <div class="ticket-badge completed-ticket">
                                    #@tarea.ticketID
                                </div>
                            </div>

                            <!-- Info del tarea -->
                            <div class="task-cell task-problem">
                                <h6 class="task-description">@tarea.Des</h6>
                            </div>

                            <!-- Fecha -->
                            <div class="task-cell task-date">
                                <div class="date-container">
                                    <span class="date-text">@tarea.Fecha.ToString("dd/MM/yyyy")</span>
                                    <span class="time-text">@tarea.Fecha.ToString("HH:mm")</span>
                                </div>
                            </div>

                            <!-- Estado -->
                            <div class="task-cell task-status">
                                <span class="status-badge status-@tarea.Estado.ToLower().Replace(" ", "-")">@tarea.Estado</span>
                            </div>

                            <!-- Categoría -->
                            <div class="task-cell task-category">
                                <span class="category-badge">@tarea.Categoria</span>
                            </div>

                            <!-- Acciones -->
                            <div class="task-cell task-actions">
                                <form asp-action="Detalles" method="post" class="task-form">
                                    <input type="hidden" name="id" value="@tarea.ID" />
                                    <button type="submit" class="btn-view-details completed-btn">
                                        <span data-feather="eye"></span>
                                        Ver
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize feather icons
        if (typeof feather !== 'undefined') {
            feather.replace();
        }
    });
</script>

<style>
    :root {
        --primary-color: #6366f1;
        --primary-dark: #4f46e5;
        --secondary-color: #64748b;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --light-gray: #f8fafc;
        --medium-gray: #e2e8f0;
        --dark-gray: #475569;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --completed-bg: #f3f4f6;
        --completed-accent: #10b981;
        --orange-color: #f97316;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: var(--text-primary);
    }

    

    /* Main Content */
    .main-content {
    }

    /* Dashboard Header */
    .dashboard-header {
        margin-bottom: 2rem;
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 0.5rem;
    }

    .dashboard-subtitle {
        font-size: 1.125rem;
        color: var(--text-secondary);
        margin: 0;
    }

    /* Tasks Section */
    .tasks-section {
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }

    .completed-section {
        background: linear-gradient(135deg, var(--completed-bg) 0%, #e5e7eb 100%);
        border: 2px solid var(--completed-accent);
    }

    .section-header {
        padding: 2rem 2.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--dark-gray);
    }

        .section-title svg {
            width: 24px;
            height: 24px;
        }

    .task-counter {
        display: flex;
        align-items: center;
    }

    .counter-badge {
        background: var(--primary-color);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 1rem;
        min-width: 2.5rem;
        text-align: center;
    }

    .completed-counter {
        background: var(--completed-accent);
    }

    /* Table Header */
    .table-header {
        display: grid;
        grid-template-columns: 100px 2fr 150px 120px 160px 100px;
        gap: 0.75rem;
        padding: 1.5rem 2.5rem;
        background: rgba(255, 255, 255, 0.3);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .header-cell {
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

        .header-cell svg {
            width: 16px;
            height: 16px;
        }

    /* Tasks List */
    .tasks-list {
        background: white;
        margin: 0 2.5rem 2.5rem;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--shadow-md);
    }

    .task-row {
        display: grid;
        grid-template-columns: 100px 2fr 150px 120px 160px 100px;
        gap: 0.75rem;
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        align-items: center;
        transition: all 0.2s ease;
    }

        .task-row:hover {
            background-color: var(--light-gray);
        }

        .task-row:last-child {
            border-bottom: none;
        }

    .task-cell {
        display: flex;
        align-items: center;
    }

    /* Ticket Badge */
    .ticket-badge {
        background: var(--primary-color);
        color: white;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 0.875rem;
        text-align: center;
    }

    .completed-ticket {
        background: var(--completed-accent);
    }

    /* Task Description */
    .task-description {
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-primary);
        margin: 0;
        line-height: 1.4;
    }

    /* Date Container */
    .date-container {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .date-text {
        font-weight: 500;
        color: var(--text-primary);
        font-size: 0.875rem;
    }

    .time-text {
        font-size: 0.75rem;
        color: var(--text-secondary);
    }

    /* Status, Priority and Category Badges */
    .status-badge, .category-badge {
        padding: 0.375rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-align: center;
        white-space: nowrap;
    }

    /* Status Colors */
    .status-asignado {
        background-color: #dbeafe;
        color: #1e40af;
    }

    .status-en-proceso {
        background-color: #fef3c7;
        color: #d97706;
    }

    .status-finalizado, .status-completado {
        background-color: #d1fae5;
        color: #059669;
    }

    .status-pendiente {
        background-color: #fef3c7;
        color: #d97706;
    }

    /* Category Badge */
    .category-badge {
        background-color: #f3e8ff;
        color: #7c3aed;
        white-space: normal;
        word-wrap: break-word;
        line-height: 1.2;
        min-height: fit-content;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    /* Action Button */
    .task-form {
        margin: 0;
        width: 100%;
    }

    .btn-view-details {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.375rem;
        text-decoration: none;
        font-size: 0.8rem;
        width: 100%;
        justify-content: center;
        white-space: nowrap;
    }

    .completed-btn {
        background: var(--completed-accent);
    }

    .btn-view-details:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    .completed-btn:hover {
        background: #059669;
    }

    .btn-view-details svg {
        width: 12px;
        height: 12px;
    }
    /* Sección de Filtros */
    .stats-section {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border: 2px solid var(--primary-color);
        margin-bottom: 2rem;
    }

    /* Formulario de Filtros */
    #filtrosForm {
        margin-bottom: 0;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        letter-spacing: 0.025em;
    }

    .form-control, .form-select {
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
        color: var(--text-primary);
        transition: all 0.2s ease;
        box-shadow: var(--shadow-sm);
    }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            background-color: white;
        }

        .form-control:hover, .form-select:hover {
            border-color: var(--primary-dark);
        }

    /* Botones de Filtros */
    .btn-view {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
        font-size: 0.875rem;
        box-shadow: var(--shadow-sm);
    }

        .btn-view:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
            color: white;
            text-decoration: none;
        }

        .btn-view svg {
            width: 16px;
            height: 16px;
        }

        /* Botón Limpiar */
        .btn-view[style*="--secondary-color"]:hover {
            background: #475569 !important;
        }

        /* Botón Exportar PDF */
        .btn-view[style*="--danger-color"]:hover {
            background: #dc2626 !important;
        }

    /* Contador de resultados */
    .stats-section > span {
        display: block;
        padding: 0 2.5rem 1rem;
        margin: 0;
    }

    /* Acciones de tareas */
    .task-actions {
        padding: 0 2.5rem 2rem;
        margin: 0;
    }

    /* Ajuste para botón Ver en la tabla */
    .btn-view-details {
        min-width: 80px;
        padding: 0.625rem 0.875rem;
        font-size: 0.875rem;
        height: auto;
        min-height: 36px;
    }

        .btn-view-details svg {
            width: 14px;
            height: 14px;
        }



</style>