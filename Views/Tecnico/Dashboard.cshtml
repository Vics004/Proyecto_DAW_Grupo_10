<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar">
            <div class="position-sticky pt-3">
                <div class="company-header">
                    <h4 class="company-name">Nombre empresa</h4>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="./Dashboard">
                            <span data-feather="home"></span>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./MisTareas">
                            <span data-feather="file-text"></span>
                            Mis Tareas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./HistorialTareas">
                            <span data-feather="clock"></span>
                            Historial de Tareas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./MisTickets">
                            <span data-feather="tag"></span>
                            Mis Tickets
                        </a>
                    </li>
                </ul>
                <div class="mt-auto p-3 border-top">
                    <a href="#" class="nav-link logout-link">
                        <span data-feather="log-out"></span>
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 main-content">
            <!-- Header del Dashboard -->
            <div class="dashboard-header mb-4">
                <h2 class="dashboard-title">Dashboard</h2>
                <p class="dashboard-subtitle">Gestiona tus tareas y revisa el progreso</p>
            </div>

            <!-- Contenedor de tareas pendientes -->
            <div class="tasks-section pending-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <span data-feather="clock"></span>
                        Tareas pendientes
                    </h3>
                    <div class="task-counter">
                        @{
                            var pendingCount = ((IEnumerable<dynamic>)ViewData["tareasPendientes"]).Count();
                        }
                        <span class="counter-badge">@pendingCount</span>
                    </div>
                </div>
                <div class="tasks-grid">
                    @foreach (var tarea in (IEnumerable<dynamic>)ViewData["tareasPendientes"])
                    {
                        <div class="task-card pending-card">
                            <div class="task-content">
                                <div class="task-header">
                                    <h5 class="task-title">@tarea.Des</h5>
                                    <div class="task-badges">
                                        <span class="priority-badge priority-@tarea.Prioridad.ToLower()">@tarea.Prioridad</span>
                                        <span class="status-badge status-@tarea.Estado.ToLower().Replace(" ", "-")">@tarea.Estado</span>
                                    </div>
                                </div>
                                <div class="task-actions">
                                    <form asp-action="Detalles" method="post" class="task-form">
                                        <input type="hidden" name="id" value="@tarea.ID" />
                                        <button type="submit" class="btn-view">
                                            <span data-feather="eye"></span>
                                            Ver detalles
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Contenedor de tareas realizadas -->
            <div class="tasks-section completed-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <span data-feather="check-circle"></span>
                        Tareas resueltas
                    </h3>
                    <div class="task-counter">
                        @{
                            var completedCount = ((IEnumerable<dynamic>)ViewData["tareasRealizadas"]).Count();
                        }
                        <span class="counter-badge completed-counter">@completedCount</span>
                    </div>
                </div>
                <div class="tasks-grid">
                    @foreach (var tarea in (IEnumerable<dynamic>)ViewData["tareasRealizadas"])
                    {
                        <div class="task-card completed-card">
                            <div class="task-content">
                                <div class="task-header">
                                    <h5 class="task-title">@tarea.Des</h5>
                                    <div class="task-badges">
                                        <span class="status-badge status-completed">@tarea.Estado</span>
                                    </div>
                                </div>
                                <div class="completion-indicator">
                                    <span data-feather="check"></span>
                                    <span class="completion-text">Completada</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize feather icons
        if (typeof feather !== 'undefined') {
            feather.replace();
        }
    });
</script>

<style>
    :root {
        --primary-color: #6366f1;
        --primary-dark: #4f46e5;
        --secondary-color: #64748b;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --light-gray: #f8fafc;
        --medium-gray: #e2e8f0;
        --dark-gray: #475569;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --pending-bg: #dbeafe;
        --pending-accent: #3b82f6;
        --completed-bg: #f3f4f6;
        --completed-accent: #10b981;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: var(--text-primary);
    }

    /* Sidebar Styles */
    .sidebar {
        background: white;
        border-right: 1px solid var(--border-color);
        box-shadow: var(--shadow-sm);
        height: 100vh;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
    }

    .company-header {
        padding: 1.5rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 1rem;
    }

    .company-name {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--primary-color);
        margin: 0;
    }

    .sidebar .nav-link {
        color: var(--text-secondary);
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        margin: 0 0.75rem 0.25rem;
        display: flex;
        align-items: center;
        transition: all 0.2s ease;
        text-decoration: none;
    }

        .sidebar .nav-link svg {
            width: 18px;
            height: 18px;
            margin-right: 0.75rem;
        }

        .sidebar .nav-link:hover {
            background-color: var(--light-gray);
            color: var(--text-primary);
            text-decoration: none;
        }

        .sidebar .nav-link.active {
            background-color: var(--primary-color);
            color: white;
            font-weight: 500;
        }

    .logout-link {
        color: var(--danger-color) !important;
    }

        .logout-link:hover {
            background-color: #fee2e2 !important;
        }

    /* Main Content */
    .main-content {
        margin-left: 16.66667%; /* Offset for sidebar */
        padding: 2rem;
    }

    /* Dashboard Header */
    .dashboard-header {
        margin-bottom: 2rem;
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 0.5rem;
    }

    .dashboard-subtitle {
        font-size: 1.125rem;
        color: var(--text-secondary);
        margin: 0;
    }

    /* Tasks Sections */
    .tasks-section {
        margin-bottom: 3rem;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }

    .pending-section {
        background: linear-gradient(135deg, var(--pending-bg) 0%, #bfdbfe 100%);
        border: 2px solid var(--pending-accent);
    }

    .completed-section {
        background: linear-gradient(135deg, var(--completed-bg) 0%, #e5e7eb 100%);
        border: 2px solid var(--completed-accent);
    }

    .section-header {
        padding: 2rem 2.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .pending-section .section-title {
        color: var(--text-primary);
    }

    .completed-section .section-title {
        color: var(--dark-gray);
    }

    .section-title svg {
        width: 24px;
        height: 24px;
    }

    .task-counter {
        display: flex;
        align-items: center;
    }

    .counter-badge {
        background: var(--primary-color);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 1rem;
        min-width: 2.5rem;
        text-align: center;
    }

    .completed-counter {
        background: var(--completed-accent);
    }

    /* Tasks Grid */
    .tasks-grid {
        padding: 2rem 2.5rem;
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    }

    /* Task Cards */
    .task-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .task-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

    .pending-card {
        border-left: 4px solid var(--pending-accent);
    }

    .completed-card {
        border-left: 4px solid var(--completed-accent);
        opacity: 0.9;
    }

    .task-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .task-header {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .task-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
        line-height: 1.4;
    }

    .task-badges {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    /* Badges */
    .priority-badge, .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .priority-urgente {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .priority-alta {
        background-color: #fed7d7;
        color: #e53e3e;
    }

    .priority-media {
        background-color: #fef3c7;
        color: #d97706;
    }

    .priority-baja {
        background-color: #e0e7ff;
        color: #6366f1;
    }

    .status-asignado {
        background-color: #dbeafe;
        color: #1e40af;
    }

    .status-en-proceso {
        background-color: #fef3c7;
        color: #d97706;
    }

    .status-finalizado, .status-completed {
        background-color: #d1fae5;
        color: #059669;
    }

    /* Task Actions */
    .task-actions {
        display: flex;
        justify-content: flex-end;
    }

    .task-form {
        margin: 0;
    }

    .btn-view {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-view:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .btn-view svg {
            width: 16px;
            height: 16px;
        }

    /* Completion Indicator */
    .completion-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--completed-accent);
        font-weight: 500;
        font-size: 0.875rem;
    }

        .completion-indicator svg {
            width: 18px;
            height: 18px;
        }

    
</style>